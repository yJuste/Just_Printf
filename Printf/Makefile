NAME = libftprintf

CC = gcc
CFLAGS = -g

SRC =	ft_printf.c		\
	ft_printf_2.c		\
	ft_print_percent.c	\
	ft_print_c.c		\
	ft_print_s.c		\
	ft_print_p.c		\
	ft_print_d.c		\
	ft_print_d_next.c	\
	ft_print_u.c		\
	ft_print_u_next.c	\
	ft_printf_lib.c		\
	ft_printf_lib_2.c	\
	ft_printf_lib_3.c	\

OBJ = $(SRC:.c=.o)

all : $(NAME)

$(NAME) : $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

bonus : $(NAME)

clean :
	@rm -f $(OBJ)

fclean : clean
	@rm -f $(NAME)

re : fclean all

rf : re
	@rm -f $(OBJ)
	@rm -f $(NAME)

s:
	ls -lh $(NAME)

.PHONY: all clean fclean re rf s
